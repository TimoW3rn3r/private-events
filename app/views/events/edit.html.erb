<%= render partial: "shared/errors", locals: { object: @event } %>

<h2>Edit Event</h2>

<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :name, "Event Name" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :time %><br>
    <%= form.time_field :time %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

