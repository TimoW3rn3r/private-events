<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Creator
    </th>
    <th>
      Location
    </th>
    <th>
      Date
    </th>
    <th>
      Time
    </th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td>
        <%= link_to event.name, event %>
      </td>
      <td>
        <%= event.creator.fullname %>
      </td>
      <td>
        <%= event.location %>
      </td>
      <td>
        <%= event.date %>
      </td>
      <td>
        <%= event.time %>
      </td>
    </tr>
  <% end %>
</table>
